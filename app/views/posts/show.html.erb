
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col-md-5 col-md-offset-2">
    <div class="row">
    
   
      <h1><%= @post.title %></h1>
      <h5><p>Published on <%= @post.created_at.strftime('%b, %d %Y') %></p></h5>
      <p>
      <a href="mailto:<%= request.original_url %>" class="text-dark"><i class="fa-solid fa-envelope fa-2x"></i></a>&nbsp;&nbsp;
      <a href="https://telegram.me/share/url?url=<%= request.original_url %>"><i class="fa-solid fa-paper-plane fa-2x"></i></a>&nbsp;&nbsp;
      <a href="whatsapp://send?text=<%= request.original_url %>" class="text-dark"><i class="fa-brands fa-whatsapp fa-2x"></i></i></a>
      </p>
      </div>
      
      <div class="row">
        <p><%= image_tag @post.image %></p>
        <br>
        <p><%= @post.description %></p>
        <% if current_user == @post.user %>
        <p><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning" %> |
        <%= link_to "Destroy", post_path(@post), class: "btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> |
        <% end %>
        <%= link_to 'Back', posts_path, class: 'btn btn-info' %>
               
      </div>
  </div>
</div>
